<?xml version="1.0" encoding="utf-8"?>
<form>
        <fieldset>
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" required="true"
                        readonly="true" class="readonly" />
		<field
                	name="name"
 			type="text"
                	label="COM_TECNOMED_NAME"
                	description="COM_TECNOMED_NAME"
                	class="inputbox"
                	size="40"
                	required="true"/>
		<field
	                name="alias"
        	        type="text"
	                label="JFIELD_ALIAS_LABEL"
        	        description="JFIELD_ALIAS_DESC"
                	class="inputbox"
                	size="40"/>
		<field
                        name="language"
                        type="contentlanguage"
                        label="JFIELD_LANGUAGE_LABEL"
                        description="COM_TECNOMED_FIELD_LANGUAGE_DESC"
                        class="inputbox">
                        <option value="*">JALL</option>
                </field>
		<field
	                name="description"
        	        type="editor"
                	label="JGLOBAL_DESCRIPTION"
	                description="COM_TECNOMED_DESCRIPTION_DESC"
        	        class="inputbox"
                	filter="safehtml"
	                buttons="true" hide="pagebreak,readmore" />
		<field name="metadesc" type="textarea"
                        label="COM_TECNOMED_FIELD_META_DESC_LABEL" description="COM_TECNOMED_FIELD_META_DESC"
                        cols="30" rows="5" />
                <field name="metakey" type="textarea"
                        label="COM_TECNOMED_FIELD_META_KEYS_LABEL" description="COM_TECNOMED_FIELD_META_KEYWORDS_DESC"
                        cols="30" rows="5" />
		<field name="image"
                        type="media"
                        hide_none="1"
                        label="COM_TECNOMED_FIELD_PARAMS_IMAGE_LABEL"
                        description="COM_TECNOMED_FIELD_PARAMS_IMAGE_DESC"
                        />
	</fieldset>
</form>
